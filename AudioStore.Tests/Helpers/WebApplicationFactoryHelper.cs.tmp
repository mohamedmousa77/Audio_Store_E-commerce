using AudioStore.Infrastructure.Data;
using Microsoft.AspNetCore.Hosting;
using Microsoft.AspNetCore.Mvc.Testing;
using Microsoft.EntityFrameworkCore;
using Microsoft.Extensions.DependencyInjection;
using Microsoft.Extensions.DependencyInjection.Extensions;

namespace AudioStore.Tests.Helpers;

/// <summary>
/// Custom WebApplicationFactory for integration tests with in-memory database
/// </summary>
public class WebApplicationFactoryHelper : WebApplicationFactory<Program>
{
    private readonly string _databaseName;

    public WebApplicationFactoryHelper(string? databaseName = null)
    {
        _databaseName = databaseName ?? $"TestDb_{Guid.NewGuid()}";
    }

    protected override void ConfigureWebHost(IWebHostBuilder builder)
    {
        builder.ConfigureServices(services =>
        {
            // Remove the existing DbContext registration
            services.RemoveAll(typeof(DbContextOptions<AppDbContext>));
            services.RemoveAll(typeof(AppDbContext));

            // Add in-memory database
            services.AddDbContext<AppDbContext>(options =>
            {
                options.UseInMemoryDatabase(_databaseName);
                options.EnableSensitiveDataLogging();
            });

            // Build service provider
            var serviceProvider = services.BuildServiceProvider();

            // Create a scope to get the database context
            using var scope = serviceProvider.CreateScope();
            var scopedServices = scope.ServiceProvider;
            var db = scopedServices.GetRequiredService<AppDbContext>();

            // Ensure database is created
            db.Database.EnsureCreated();

            // Seed test data
            SeedTestData(db);
        });

        builder.UseEnvironment("Testing");
    }

    /// <summary>
    /// Seeds the database with test data
    /// </summary>
    private static void SeedTestData(AppDbContext context)
    {
        // Clear existing data
        context.Products.RemoveRange(context.Products);
        context.Categories.RemoveRange(context.Categories);
        context.SaveChanges();

        // Seed categories
        TestDbContextFactory.SeedTestData(context);
    }

    /// <summary>
    /// Creates an authenticated HTTP client with admin credentials
    /// </summary>
    public HttpClient CreateAdminClient()
    {
        var client = CreateClient();
        return TestAuthHelper.CreateAdminClient(client);
    }

    /// <summary>
    /// Creates an authenticated HTTP client with customer credentials
    /// </summary>
    public HttpClient CreateCustomerClient()
    {
        var client = CreateClient();
        return TestAuthHelper.CreateCustomerClient(client);
    }

    /// <summary>
    /// Gets the database context for direct database operations in tests
    /// </summary>
    public AppDbContext GetDbContext()
    {
        var scope = Services.CreateScope();
        return scope.ServiceProvider.GetRequiredService<AppDbContext>();
    }

    /// <summary>
    /// Resets the database to a clean state
    /// </summary>
    public void ResetDatabase()
    {
        var db = GetDbContext();
        db.Database.EnsureDeleted();
        db.Database.EnsureCreated();
        SeedTestData(db);
    }
}
